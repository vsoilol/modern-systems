<Window x:Class="WPFCode.Lab4.Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCode.Lab4.Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="t1" Margin="0,0,0,10" Text="TextBox1"/>
            <TextBox x:Name="t2" Text="{Binding ElementName=t1, Path=Text, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            <Slider x:Name="slider1" Margin="0,0,0,10"/>
            <Slider x:Name="slider2" Value="{Binding ElementName=slider1, Path=Value}" />
        </StackPanel>
    </Grid>
</Window>
