<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <InkCanvas Name="inkCanvas" Margin="10">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Width="5" Height="5" />
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button Content="Increase Eraser Size" Click="IncreaseEraserSize" Margin="0,0,0,10"/>
            <Button Content="Decrease Eraser Size" Click="DecreaseEraserSize"/>
        </StackPanel>
    </Grid>
</Window>
